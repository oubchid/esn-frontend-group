.modal.full-screen
  form(name="form", ng-submit="$ctrl.addMembers(); $hide()")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="{{ 'Close' | translate }}", ng-click="$hide()")
            span(aria-hidden="true") &times;
          h4.modal-title {{ 'Add members' | translate }}
        group-member-auto-complete(new-members="$ctrl.newMembers", group="$ctrl.group", autofocus="true")
        .modal-footer.flex
          .flex-vertical-centered.flex-end
            button.btn.btn-link(type="button", ng-click="$hide()")
              | {{ 'Cancel' | translate }}
            button.btn.btn-primary(type="submit", ng-disabled="form.$invalid || form.$pristine")
              | {{ 'Add' | translate }}
