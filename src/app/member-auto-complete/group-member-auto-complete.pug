.form-group
  .input-group
    span.input-group-addon
      i.mdi.mdi-account-multiple-plus
    .group-members-input
      .fg-line
        tags-input.form-control(
          ng-model='$ctrl.newMembers',
          placeholder="{{ 'Type a name or email...' | translate }}",
          display-property='email',
          key-property='id',
          replace-spaces-with-dashes='false',
          on-tag-adding='$ctrl.onTagAdding($tag)',
          on-tag-added='$ctrl.onTagAdded($tag)',
          on-tag-removed='$ctrl.onTagRemoved($tag)'
        )
          auto-complete(
            key-property='id',
            source='$ctrl.search($query)',
            min-length='1', debounce-delay='200',
            max-results-to-show= '20',
            template='/views/modules/auto-complete/attendees.html'
          )
      group-member-validate-message(ng-class="$ctrl.error ? 'dirty' : 'pristine'", error='$ctrl.error')

